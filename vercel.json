{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/backend/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}