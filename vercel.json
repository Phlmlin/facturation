{
    "version": 2,
    "trailingSlash": true,
    "cleanUrls": true,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "out"
            }
        },
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/backend/src/index.js"
        },
        {
            "source": "/((?!api/|uploads/|_next/|static/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ]
}
